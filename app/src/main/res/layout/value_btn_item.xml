<merge xmlns:android="http://schemas.android.com/apk/res/android"	>

    <Button android:id="@+id/value_button"
            android:layout_width="@dimen/bigBtnWidth"
            android:layout_height="@dimen/bigBtnHeight"
            android:padding="@dimen/contentMargin"
            android:background="@drawable/btn_input"
            android:gravity="bottom|center_horizontal" />

    <EditText android:id="@+id/count"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:gravity="right"
              android:numeric="decimal"
              android:lines="1"
              android:textSize="18dip" />

</merge>
