<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageButton
        android:id="@+id/payment_delete"
        style="@style/btnTicket"
        android:layout_width="@dimen/smallBtnWidth"
        android:layout_height="@dimen/smallBtnWidth"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/contentMargin"
        android:layout_marginLeft="@dimen/btnSpacing"
        android:layout_marginRight="@dimen/contentMargin"
        android:layout_marginTop="@dimen/contentMargin"
        android:src="@drawable/btn_delete" />

    <TextView
        android:id="@+id/payment_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/payment_delete"
        android:gravity="center" />

    <TextView
        android:id="@+id/payment_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/contentMargin"
        android:layout_toLeftOf="@id/payment_amount" />
</merge>