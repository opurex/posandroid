<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="@dimen/categorySelectorWidth"
        android:layout_height="@dimen/categorySelectorHeight"
        android:background="@drawable/category_selector"
        android:paddingLeft="@dimen/contentMargin"
        android:paddingRight="@dimen/contentMargin"
        android:paddingTop="@dimen/contentMargin">

        <ImageView
            android:id="@+id/category_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/category_name"
            android:layout_marginBottom="1dp"
            android:background="@color/category_item_bg"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_placeholder_img" />

        <TextView
            android:id="@+id/category_name"
            style="@style/itemLabel"
            android:layout_alignParentBottom="true"
            android:background="@color/category_item_bg"
            android:gravity="center_horizontal|bottom"
            android:minLines="2" />
    </RelativeLayout>
</merge>