<!-- Layout width controlled in GridView -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="1dp">

    <com.opurex.client.widgets.ItemImage
        android:id="@+id/product_icon"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bigBtnHeight"
        android:layout_marginBottom="1dp"
        android:background="@color/product_item_inner_bg"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_placeholder_img" />

    <TextView
        android:id="@+id/product_label"
        style="@style/itemLabel"
        android:layout_below="@id/product_icon"
        android:background="@color/product_item_inner_bg" />
</RelativeLayout>