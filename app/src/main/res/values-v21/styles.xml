
<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="POSTechTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="android:textSize">@dimen/textMedium</item>
        <item name="android:windowBackground">@color/main_bg</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:navigationBarColor">@color/surface</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

    <!-- Enhanced button elevations for API 21+ -->
    <style name="MaterialButton" parent="Widget.Material3.Button">
        <item name="android:layout_height">@dimen/btnHeight</item>
        <item name="android:textSize">@dimen/textMedium</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">@dimen/btnCornerRadius</item>
        <item name="android:elevation">@dimen/elevation_button</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
</resources>
