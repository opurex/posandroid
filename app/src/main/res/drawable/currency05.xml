
<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <gradient
                android:startColor="#607D8B"
                android:endColor="#263238"
                android:angle="135" />
            <stroke
                android:width="2dp"
                android:color="#37474F" />
        </shape>
    </item>
    
    <item android:inset="6dp">
        <shape android:shape="oval">
            <stroke
                android:width="1dp"
                android:color="#FFFFFF" />
        </shape>
    </item>
    
    <item android:inset="10dp">
        <shape android:shape="oval">
            <solid android:color="#66FFFFFF" />
        </shape>
    </item>
</layer-list>
